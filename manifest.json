{
	"manifest_version": 2,
	"name": "Imagine Job Email Insert",
	"version": "1.0",
	"description": "Imagine Job Email Insert",
	"permissions": ["activeTab", "scripting", "contextMenus", "tabs"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.xing.com/jobs/*",
				"https://*.stepstone.de/*",
				"https://*.join.com/*",
				"https://*.greenhouse.io/*",
				"https://*.linkedin.com/jobs/*"
			],
			"js": [
				"styles/css-injector.js",
				"job-details-modal.js",
				"job-boards/index.js"
			]
		},
		{
			"matches": ["https://docs.google.com/forms/*"],
			"js": ["styles/css-injector.js", "imagine-job-tracking-page.js"]
		}
	],
	"web_accessible_resources": ["styles.css"]
}